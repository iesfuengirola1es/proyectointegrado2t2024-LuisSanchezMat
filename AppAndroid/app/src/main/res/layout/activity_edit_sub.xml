<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar suscripción"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        android:layout_margin="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la suscripción"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/editNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la suscripción"
            android:background="@drawable/edit_text_background"
            android:focusable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de inicio"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/editFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de inicio"
            android:background="@drawable/edit_text_background"
            android:focusable="false" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de fin"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/editFechaFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de fin"
            android:background="@drawable/edit_text_background"
            android:focusable="false" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periodicidad"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/editPeriodicidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Periodicidad"
            android:background="@drawable/edit_text_background"
            android:focusable="false" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Importe"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/editImporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Importe"
            android:background="@drawable/edit_text_background"
            android:inputType="numberDecimal"
            android:focusable="false" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notas"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/editNotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notas"
            android:background="@drawable/edit_text_background"
            android:inputType="textMultiLine"
            android:focusable="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|start"
                android:text="Logo escogido:"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/logoescogido"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scaleType="fitCenter" />
        </LinearLayout>


        <Button
            android:id="@+id/buttonEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:layout_marginTop="42dp"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>
